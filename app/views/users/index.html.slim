h1 = t('title.all_users')

.mb-3
table.table.table-hover
  thead.thead-default
    tr
      th = "画像"
      th = t('activerecord.attributes.users.name')
  tbody
  - @users.each do |user|
    tr
      td = form.file_field :avatar
      td = link_to user.name, user

.mt-3
  = paginate @users
  = page_entries_info @users
