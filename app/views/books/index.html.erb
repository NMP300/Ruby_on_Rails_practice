<p id="notice"><%= notice %></p>

<h1><%= "#{t'title.Books'}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t'activerecord.attributes.book.title' %></th>
      <th><%= t'activerecord.attributes.book.memo' %></th>
      <th><%= t'activerecord.attributes.book.author' %></th>
      <th><%= t'activerecord.attributes.book.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to "#{t'link.Show'}", book %></td>
        <td><%= link_to "#{t'link.Edit'}", edit_book_path(book) %></td>
        <td><%= link_to "#{t'link.Destroy'}", book, method: :delete, data: { confirm: "#{t 'helpers.submit.Are_You_Sure'}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t'link.New_Book'}", new_book_path %>
